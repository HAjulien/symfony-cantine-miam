{% extends 'base.html.twig' %}

{% block title %}Liste des critiques{% endblock %}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/tableau.css') }}" type="text/css" />
        {% endblock %}

{% block body %}
        <h1>{{titre}}</h1>

        <h3>{{total}} Avis</h3><table>
        <thead>
                <tr>
                        <td>auteur</td>
                        <td>categorie</td>
                        <td>Produit</td>
                        <td>note /5</td>
                        <td>contenu</td>
                </tr>
        </thead>
        <tbody>
        {% for critique in critiques  %}
                <tr>
                        <td> {{ critique.utilisateur.pseudo }}  </td>
                        <td> <span class=" avisCategorie {{ critique.produit.category.nom }}">
                        {{ critique.produit.category.nom }}
                        </span>
                        </td>
                        <td> {{ critique.produit.nom }}  </td>
                        <td>
                                <span class=" {{ (critique.note > bonneNote) ? 'bonneNote' : (critique.note > moyenneNote) ? 'moyenneNote' : 'mauvaiseNote' }} ">{{ critique.note }} </span>
                        </td>
                        <td> {{ critique.contenu }}</td>
                        <td> 
                                <a href="{{ path('critique_delete', {id: critique.id}) }}" class="btn b2"  onclick="return confirm('Suppression ? ')"><ion-icon name="trash-outline"></ion-icon></a>
                        </td>
                </tr>
        {% endfor %}
        </tbody>
</table>

{% endblock %}