{% extends 'base.html.twig' %}

{% block title %}Liste des images du carousel{% endblock %}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/tableau.css') }}" type="text/css" />
        {% endblock %}

{% block body %}
        <h1>{{ titre }}</h1>

        <h2><a class="usebtn ajout" href="{{ path('imageCarousel_add') }}">Ajouter une image </a></h2>

        <h3>{{total}} Image</h3>
<table>
        <thead>
                <tr>
                        <td>image</td>
                        <td>description</td>
                </tr>
        </thead>
        <tbody>
        {% for image in images  %}
                <tr>
                        <td>
                                <div><img src="{{image.image}}" alt="{{ image.descriptionImage }}" class="img" ></div>
                        </td>
                        <td> {{ image.descriptionImage }}</td>
                        <td> 
                                <a href="{{ path('imageCarousel_update', {id: image.id}) }}" class="btn b1"><ion-icon name="create-outline"></ion-icon></a>
                                <a href="{{ path('imageCarousel_delete', {id: image.id}) }}" class="btn b2"  onclick="return confirm('Suppression ? ')"><ion-icon name="trash-outline"></ion-icon></a>
                        </td>
                </tr>
        {% endfor %}


        </tbody>
</table>

<ul class="pagination">
{% set pages = (total / limit)|round(0,'ceil') %}
{# pour eviter probleme que page = 0 #}
        {% if pages > 0 %}
        {# fleche pour revenir page 1 #}
                <li class=" {{ (page == 1) ? 'disable' : '' }} ">
                        <a href="?page=1" id="a">
                                <ion-icon name="play-back-outline"></ion-icon>
                        </a>
                </li>
        {# fleche pour revenir en arriere #}
                <li class=" {{ (page == 1) ? 'disable' : '' }} ">
                        <a href="{{ (page > 1) ? '?page=' ~ (page -1) : '' }}" id="a">
                                <ion-icon name="arrow-back-outline"></ion-icon>
                        </a>
                </li>

        {# calcul total user / limit user par page que l'on arrondi au superieur avec ceil on enferme variable pages gr√¢ce set #}
                {% for item in 1..pages %}
                        <li class=" {{ (page == item) ? 'active' : '' }} ">
                                <a href="?page={{ item }}" id="a"> {{ item }} </a>
                        </li>
                {% endfor %}

        {# fleche pour aller vers suivant #}
                <li class=" {{ (page == pages) ? 'disable' : '' }} ">
                        <a href="{{ (page < pages) ? '?page=' ~ (page +1) : '' }}" id="a">
                                <ion-icon name="arrow-forward-outline"></ion-icon>
                        </a>
                </li>

        {# fleche pour derniere page  #}
                <li class=" {{ (page == pages) ? 'disable' : '' }} ">
                        <a href="?page= {{ pages }}" id="a">
                                <ion-icon name="play-forward-outline"></ion-icon>
                        </a>
                </li>
        {% else %}
        {# quand il n'y a aucun resultat #}
                <li class="active" >
                        <a href="" id="a">
                                1
                        </a>
                </li>

        {% endif %}
</ul>

{% endblock %}

