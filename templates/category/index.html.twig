{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/tableau.css') }}" type="text/css" />
        {% endblock %}

{% block body %}
        <h1>{{ titre }}</h1>

        <h2><a class="usebtn ajout" href="{{ path('category_add') }}">Ajouter une catégorie </a></h2>
        <h2><a class="usebtn" href="{{ path('category_recherche') }}">rechercher <ion-icon name="search"></ion-icon> </a></h2>

        <h3>{{total}} catégories</h3>


<table>
        <thead>
                <tr>
                        <td>nom</td>
                        <td>pastille</td>
                        <td>nombre de plats</td>
                        <td></td>
                </tr>
        </thead>
        <tbody>
        {% for category in categories %}
                <tr>
                        <td> {{category.nom}}</td>
                        <td>
                                <a href="{{ path('produit_filtre', {id: category.id}) }}">
                                        <span class="pastille {{ category.nom }}"></span>
                                </a>
                        </td>
                        <td>
                                <a href="{{ path('produit_filtre', {id: category.id}) }}" id="a">
                                {{category.produits | length}}
                                </a>
                        </td>
                        <td> 
                                <a href="{{ path('produit_filtre', {id: category.id}) }}" class="btn b3">+</a>
                                <a href="{{ path('category_update', {id: category.id}) }}" class="btn b1"><ion-icon name="create-outline"></ion-icon></a>
                                <a href="{{ path('category_delete', {id: category.id}) }}" class="btn b2"  onclick="return confirm('Suppression ? ')"><ion-icon name="trash-outline"></ion-icon></a>
                        </td>
                </tr>
        {% endfor %}


        </tbody>
</table>

{% endblock %}

